# Etapa de construcción
FROM node:22 AS builder
WORKDIR /app

# Permitir pasar PUBLIC_API_URL como build-arg desde el sistema de deploy (Railway)
# y exponerla como variable de entorno durante las instrucciones RUN, de modo que
# el build de Vite/SvelteKit pueda leerla en tiempo de build.
ARG PUBLIC_API_URL
ENV PUBLIC_API_URL=${PUBLIC_API_URL}

COPY . .
RUN echo "PUBLIC_API_URL during build: $PUBLIC_API_URL"
RUN npm install
RUN npm run build

# Etapa de producción
FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]